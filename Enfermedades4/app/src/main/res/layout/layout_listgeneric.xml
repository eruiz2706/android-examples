<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/image_listgeneric"
        android:layout_weight="0.11" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="241dp"
        android:layout_height="46dp"
        android:layout_weight="0.16">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="etiqueta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_etiq1_listageneric"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

            <TextView
                android:text="valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dato1_listgeneric"
                android:layout_weight="1"
                android:gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_etiq2_listageneric"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dato2_listgeneric"
                android:gravity="left"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_etiq3_listageneric"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dato3_listgeneric"
                android:gravity="left"
                android:layout_weight="1" />

        </LinearLayout>

</LinearLayout>

</LinearLayout>
