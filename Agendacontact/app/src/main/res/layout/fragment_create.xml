<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eduardo.agendacontact.CreateFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_nombre" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombre" />

        <TextView
            android:text="Apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_apellido" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/apellido" />

        <TextView
            android:text="Direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_direccion" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/direccion" />

        <TextView
            android:text="Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_telefono" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/telefono" />

        <TextView
        android:text="Correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx_correo" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/correo" />

        <TextView
            android:text="Fecha Nacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_fechac" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_fechanac" />

       <TextView
            android:text="Sexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tx_sexo" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sel_sexo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b_guardar"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
