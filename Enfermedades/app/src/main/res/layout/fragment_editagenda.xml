<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eduardo.enfermedades.modulos.agenda.Editagenda">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Datos Cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4s" />

        <Switch
            android:text="Recordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordatorio_editagenda" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="34dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_fechareditgenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/fechar_editagenda"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:ems="14"
                    android:hint="Fecha Recordatorio"
                    android:inputType="date"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b_fechar_editagenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_weight="0.01">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_horareditagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/horar_editagenda"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:ems="14"
                    android:hint="Hora Recordatorio"
                    android:inputType="time"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/b_horar_editagenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/b_editaragenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/save32"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
