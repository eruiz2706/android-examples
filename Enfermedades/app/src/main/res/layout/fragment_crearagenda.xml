<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eduardo.enfermedades.modulos.agenda.Crearagenda">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <TextView
            android:text="Datos Cita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4s" />

        <TextView
            android:text="Medico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medico_newagenda" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_descripnewagenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/descripcion_newagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="14"
                android:hint="Descripcion *"
                android:inputType="text"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_fechanewagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/fecha_newagenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:hint="Fecha *"
                    android:inputType="date"
                    android:layout_weight="2"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:id="@+id/b_fecha_newagenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_horanewagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/hora_newagenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:hint="Hora *"
                    android:inputType="time"
                    android:layout_weight="2"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/b_hora_newagenda" />
        </LinearLayout>


        <Switch
            android:text="Recordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordatorio_newagenda" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_fecharnewagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/fechar_newagenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:hint="Fecha Recordatorio"
                    android:inputType="date"
                    android:layout_weight="2"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/b_fechar_newagenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_horarnewagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/horar_newagenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="14"
                    android:hint="Hora Recordatorio"
                    android:inputType="time"
                    android:layout_weight="2"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:text="..."
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/b_horar_newagenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/b_listaragenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/list32"/>
            <ImageButton
                android:id="@+id/b_guardaragenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:src="@drawable/save32"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
